{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "background": "transparent",
  "title": {
    "text": "2023 Global Imports of Malaysian Palm Oil (Per Capita in MT)",
    "anchor": "middle",
    "fontSize": 18
  },

  "params": [
    {
      "name": "MapCenter",
      "value": "World",
      "bind": {
        "input": "select",
        "options": ["World", "Africa", "Asia", "Europe", "South America"],
        "name": "View Region: "
      }
    }
  ],

  "projection": {
    "type": "equalEarth",
    "center": {
      "expr": "MapCenter == 'Africa' ? [20, 0] : MapCenter == 'Asia' ? [90, 30] : MapCenter == 'Europe' ? [10, 50] : MapCenter == 'South America' ? [-60, -20] : [0, 0]"
    },
    "scale": {
      "expr": "MapCenter == 'Africa' ? 180 : MapCenter == 'Asia' ? 220 : MapCenter == 'Europe' ? 250 : MapCenter == 'South America' ? 230 : 160"
    }
  },

  "layer": [
    {
      "data": {"sphere": true},
      "mark": {
        "type": "geoshape",
        "fill": "#bde0fe"
      }
    },
    {
      "data": {"graticule": {"step": [20, 20]}},
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.4,
        "opacity": 0.5
      }
    },
    {
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/bbb9888/3179/refs/heads/main/DV2/world_map.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "#222",
            "strokeWidth": 0.3
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/bbb9888/3179/refs/heads/main/DV2/world_map.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "datum.properties.ADMIN == 'United States of America' ? 'U.S.A' : datum.properties.ADMIN == 'Democratic Republic of the Congo' ? 'CONGO, DEMOCRATIC REP. OF THE' : datum.properties.ADMIN == 'Cote d\\'Ivoire' ? 'COTE D\\'IVOIRE' : datum.properties.ADMIN == 'Czech Republic' ? 'CZECH' : upper(datum.properties.ADMIN)",
              "as": "lookup_key"
            },
            {
              "lookup": "lookup_key",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/bbb9888/3179/refs/heads/main/DV2/palm_oil_exports_2023.csv"
                },
                "key": "Country",
                "fields": [
                  "Quantity (MT)",
                  "Population (2023)",
                  "Imports Per Capita (MT/person)"
                ]
              }
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.3
          },
          "encoding": {
            "color": {
              "field": "Imports Per Capita (MT/person)",
              "type": "quantitative",
              "title": "Imports Per Capita (MT/person)",
              "scale": {
                "type": "linear",
                "scheme": "yellowgreenblue",
                "domain": [0, 0.02]
              },
              "legend": {
                "orient": "bottom",
                "direction": "horizontal",
                "titleLimit": 250,
                "labelLimit": 200,
                "fillColor": "white",
                "padding": 5
              }
            },
            "tooltip": [
              {"field": "properties.ADMIN", "title": "Country"},
              {
                "field": "Quantity (MT)",
                "title": "Quantity (MT)",
                "format": ","
              },
              {
                "field": "Population (2023)",
                "title": "Population (2023)",
                "format": ","
              },
              {
                "field": "Imports Per Capita (MT/person)",
                "title": "Imports Per Capita (MT/person)",
                "format": ".6f"
              }
            ]
          }
        }
      ]
    }
  ],

  "config": {
    "view": {
      "stroke": "transparent",
      "fill": "transparent"
    },
    "legend": {
      "titleFontSize": 12,
      "labelFontSize": 11,
      "fillColor": "white",
      "strokeColor": "lightgray"
    },
    "title": {"anchor": "middle"}
  }
}
